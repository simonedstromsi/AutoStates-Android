<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.autostate.MainActivity">

    <Button
            android:id="@+id/button_pink_normal"
            android:background="@drawable/button_pink"
            android:layout_margin="8dp"
            android:text="Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/button_pink_pressed"
            android:background="@drawable/button_pink"
            android:layout_margin="8dp"
            android:text="Pressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/button_pink_disabled"
            android:background="@drawable/button_pink"
            android:layout_margin="8dp"
            android:text="Disabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/button_green_normal"
            android:background="@drawable/button_green"
            android:layout_margin="8dp"
            android:text="Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/button_green_pressed"
            android:background="@drawable/button_green"
            android:layout_margin="8dp"
            android:text="Pressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/button_green_disabled"
            android:background="@drawable/button_green"
            android:layout_margin="8dp"
            android:text="Disabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</LinearLayout>
